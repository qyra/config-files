{
    "editor.snippetSuggestions": "top",

    // "editor.cursorWidth": 3,
    "editor.cursorStyle": "block",
    "editor.occurrencesHighlight": false,
    "editor.selectionHighlight": true,

    "highlight-matching-tag.highlightFromContent": true,
    "highlight-matching-tag.highlightSelfClosing": true,
    "highlight-matching-tag.styles": {
        "opening": {
            "name": {
              "surround": "green"
            },
            // "right": {
            //     "surround": "green"
            // }
        },
        "closing": {
            "name": {
              "surround": "cyan"
            },
            // "right": {
            //     "surround": "orange"
            // }
        }
    },

    // Should speed up the terminal
    "terminal.integrated.experimentalBufferImpl": "TypedArray",
    "terminal.integrated.rendererType": "dom",

    "currentFilePath.priorityInStatusBar": 100,
    "currentFilePath.defaultPathStartsFrom": "rootDirectory",
    "remote.port": 52385,
    "remote.host": "127.0.0.1",
    "remote.onstartup": true,
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "deepIndent",

    // Python Settings
    // "python.pythonPath": "/home/karl/projects/environments/entrupy2/bin/python",

    // Linter Settings
    "python.linting.lintOnSave": true,
    "python.linting.pylintEnabled": true,
    // "python.linting.pylintEnabled": false,
    // "python.linting.pylintPath": "/home/karl/projects/environments/entrupy2/bin/pylint",
    "python.linting.pylintArgs": ["--rcfile=/home/karl/projects/config-files/.pylintrc"],
    "python.envFile": "/home/karl/projects/variables/pylint.env",

    // General Settings
    "editor.tabSize": 2,
    "editor.rulers": [100],
    "editor.renderWhitespace": "all",
    "typescript.tsdk": "/home/karl/projects/app-dashboard-client/node_modules/typescript/lib/",

    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.minimap.enabled": false,

    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },

    "workbench.colorTheme": "Monokai Dimmed",
    "workbench.colorCustomizations": {
        "editor.selectionHighlightBackground": "#3c773d",
        "editor.selectionBackground": "#0000DD",
        "editorCursor.foreground": "#00ffff",
        "editorCursor.background": "#000000",
        "terminalCursor.foreground": "#ffffff"
    },

    "markdown.extension.preview.autoShowPreviewToSide": true,

    "files.exclude": {
        "**/test-deploy/**": true,
        "**/alt-branches": true,
        "**/appdb-cli": true,
        "**/archive": true,
        "**/variables/combined": true,
        "**/dumps": true,
        "**/dataprocessing": true,
        "**/environments": true,
        "**/*.ipynb": true,
        "**/package-lock.json": true,

        // "**/build": true,
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        "**/.git": true,
        "**/.vscode": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": true,
        "**/node_modules": true,
        "**/docker/graylog": true,
        "**/docker/redis": true
    },
    "[json]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },

    // This is required because vscode will otherwise use scancodes - see https://github.com/Microsoft/vscode/issues/23991
    "keyboard.dispatch": "keyCode",
    "window.zoomLevel": 0,
    "explorer.confirmDelete": false,
    "vetur.completion.autoImport": false,
    "vetur.completion.useScaffoldSnippets": false,
    "vetur.validation.template": false,
    "vetur.validation.style": false,
    "python.formatting.provider": "black",
    "python.formatting.yapfPath": "/home/karl/projects/environments/entrupy2/bin/yapf",
    "python.formatting.blackPath": "/home/karl/projects/environments/entrupy3/bin/black",

    "gitlens.advanced.telemetry.enabled": false,
    "gitlens.blame.avatars": false,
    "gitlens.hovers.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": false,
    "gitlens.heatmap.toggleMode": "window",
    "gitlens.recentChanges.toggleMode": "window",
    "gitlens.blame.heatmap.location": "left",
    "gitlens.blame.toggleMode": "window",
    "editor.autoIndent": true
}
