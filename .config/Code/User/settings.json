{
    "editor.snippetSuggestions": "top",

    // "editor.cursorWidth": 3,
    "editor.cursorStyle": "block",
    "editor.occurrencesHighlight": false,
    "editor.selectionHighlight": true,

    "highlight-matching-tag.highlightFromContent": true,
    "highlight-matching-tag.highlightSelfClosing": true,
    "highlight-matching-tag.styles": {
        "opening": {
            "name": {
              "surround": "green"
            },
            // "right": {
            //     "surround": "green"
            // }
        },
        "closing": {
            "name": {
              "surround": "cyan"
            },
            // "right": {
            //     "surround": "orange"
            // }
        }
    },

    // Should speed up the terminal
    "terminal.integrated.experimentalBufferImpl": "TypedArray",
    "terminal.integrated.rendererType": "dom",

    "currentFilePath.priorityInStatusBar": 100,
    "currentFilePath.defaultPathStartsFrom": "rootDirectory",
    "remote.port": 52385,
    "remote.host": "127.0.0.1",
    "remote.onstartup": true,
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "deepIndent",

    // Python Settings
    "python.languageServer": "Jedi",

    // Linter Settings
    // "pylint.args": ["--rcfile=/home/karl/projects/config-files/vscode-pylintrc"],
    // "python.envFile": "/home/karl/projects/variables/pylint.env",
    // "pylint.interpreter": ["/home/karl/projects/environments/entrupy38/bin/python"],
    // "pylint.importStrategy": "fromEnvironment",
    "editor.rulers": [83],
    "editor.renderWhitespace": "all",

    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.minimap.enabled": false,

    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "[python]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "[javascript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[css]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[vue]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[text]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },

    "files.associations": {
        "*.boto.json": "ndjson",
        "*.jsonl": "ndjson",
        "*.njson": "ndjson"
    },

    "workbench.colorTheme": "Monokai Dimmed",
    "workbench.colorCustomizations": {
        "editor.selectionHighlightBackground": "#3c773d",
        "editor.selectionBackground": "#0000DD",
        "editorCursor.foreground": "#00ffff",
        "editorCursor.background": "#000000",
        "terminalCursor.foreground": "#ffffff"
    },

    "markdown.extension.preview.autoShowPreviewToSide": true,

    "files.exclude": {
        // "**/docs": true, // Temporarily exclude.
        "**/__pycache__": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.mypy_cache": true,
        "**/.svn": true,
        "**/.vscode": true,
        "**/*.egg-info": true,
        "**/*.ipynb": true,
        "**/*.pyc": true,
        "**/alt-branches": true,
        "**/appdb-cli": true,
        "**/archive": true,
        "**/build-v2/**": true,
        "**/build/**": true,
        "**/CVS": true,
        "**/dataprocessing": true,
        "**/docker/graylog": true,
        "**/docker/redis": true,
        "**/dumps": true,
        "**/ENV": true,
        "**/environments": true,
        "**/node_modules": true,
        "**/package-lock.json": true,
        "**/test-deploy/**": true,
        "**/variables/combined": true
    },
    "files.watcherExclude": {
        "**/__pycache__/**": true,
        "**/.DS_Store": true,
        "**/.git/**": true,
        "**/.hg": true,
        "**/.mypy_cache/**": true,
        "**/.svn": true,
        "**/.vscode/**": true,
        "**/*.egg-info/**": true,
        "**/*.ipynb": true,
        "**/*.pyc": true,
        "**/alt-branches": true,
        "**/appdb-cli": true,
        "**/archive": true,
        "**/build-v2/**": true,
        "**/build/**": true,
        "**/CVS": true,
        "**/dataprocessing": true,
        "**/docker/graylog": true,
        "**/docker/redis": true,
        "**/dumps/**": true,
        "**/ENV": true,
        "**/environments/**": true,
        "**/node_modules/**": true,
        "**/package-lock.json": true,
        "**/test-deploy/**": true,
        "**/variables/combined/**": true,
    },
    // This is required because vscode will otherwise use scancodes - see https://github.com/Microsoft/vscode/issues/23991
    "keyboard.dispatch": "keyCode",
    "explorer.confirmDelete": false,

    "gitlens.advanced.telemetry.enabled": false,
    "gitlens.blame.avatars": false,
    "gitlens.hovers.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": false,
    "gitlens.heatmap.toggleMode": "window",
    "gitlens.recentChanges.toggleMode": "window",
    "gitlens.blame.heatmap.location": "left",
    "gitlens.blame.toggleMode": "window",
    "editor.autoIndent": "full",
    "csv-preview.lineNumbers": "ordinal",
    "csv-preview.resizeColumns": "all",
    "ActiveFileInStatusBar.color": "yellow",
    "editor.autoClosingBrackets": "never",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.suggest.showClasses": false,
    "editor.suggest.showConstants": false,
    "editor.suggest.showCustomcolors": false,
    "editor.suggest.showConstructors": false,
    "editor.suggest.showColors": false,
    "editor.suggest.showEnumMembers": false,
    "editor.suggest.showEnums": false,
    "editor.suggest.showEvents": false,
    "editor.suggest.showFields": false,
    "editor.suggest.showFiles": false,
    "editor.suggest.showFolders": false,
    "editor.suggest.showFunctions": false,
    "editor.suggest.showIcons": false,
    "editor.suggest.showInterfaces": false,
    "editor.suggest.showKeywords": false,
    "editor.suggest.showMethods": false,
    "editor.suggest.showModules": false,
    "editor.suggest.showOperators": false,
    "editor.suggest.showProperties": false,
    "editor.suggest.showReferences": false,
    "editor.suggest.showStructs": false,
    "editor.suggest.showTypeParameters": false,
    "editor.suggest.showUnits": false,
    "editor.suggest.showValues": false,
    "editor.suggest.showVariables": false,
    "editor.suggest.showWords": false,
    "editor.wordBasedSuggestions": false,
    "editor.autoClosingQuotes": "never",
    "errorLens.delay": 1,

    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },

    // Web dev settings
    "vetur.completion.autoImport": false,
    "vetur.completion.useScaffoldSnippets": false,
    "vetur.validation.template": false,
    "vetur.validation.style": false,
    "[typescript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "tslint.configFile": "/home/karl/projects/app-dashboard/client/tslint.json",
    "tslint.typeCheck": true,
    "typescript.tsdk": "/home/karl/projects/app-dashboard/client/node_modules/typescript/lib/",
    "editor.multiCursorModifier": "ctrlCmd",

    "numberedBookmarks.showBookmarkNotDefinedWarning": true,
    "numberedBookmarks.navigateThroughAllFiles": "replace",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "security.workspace.trust.untrustedFiles": "open",
    "security.workspace.trust.enabled": false,
    "python.defaultInterpreterPath": "/home/karl/projects/environments/entrupy38/bin/python",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "editor.detectIndentation": false,
    "files.simpleDialog.enable": true,
    "bookmarks.sideBar.expanded": true,
    "git.openRepositoryInParentFolders": "never",
    "window.zoomLevel": -1,
}
